
@{
    ViewData["Title"] = "PersonDetails";
}

<h1>PersonDetails</h1>


@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>Enter Name</td>
            <td>
                @Html.TextBox("Username")
            </td>
        </tr>
        <tr>
            <td>Select Gender</td>
            <td>
                @Html.RadioButton("Gender", "male") Male

                @Html.RadioButton("Gender", "female")female
            </td>
        </tr>
        <tr>
            <td>Select Hobbies</td>
            <td>
                <input type="checkbox" name="hobbies" value="music" />Music
                <input type="checkbox" name="hobbies" value="sport" />Sport
                <input type="checkbox" name="hobbies" value="drawing" />Drawing
            </td>
        </tr>
        <tr>
            <td>
                Would you like to paticipate in social survey ?
            </td>
            <td>
                @Html.DropDownList("options")
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Save" class="btn btn-outline-primary" />
            </td>
        </tr>
    </table>
}